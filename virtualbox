# -*- sh -*-
# vi: set ft=sh :

## Use official Virtualbox repositories
## NOTE: This does not contain guest additions!
echo "deb http://download.virtualbox.org/virtualbox/debian jessie contrib" > /etc/apt/sources.list.d/virtualbox
wget -q https://www.virtualbox.org/download/oracle_vbox.asc -O- | apt-key add -

apt-get clean -y
apt-get update -y

## Make it possible to compile stuff
apt-get install -y build-essential dkms autoconf automake libtool make cmake

## VirtualBox additions
apt-get install -y virtualbox-guest-dkms virtualbox-guest-x11
