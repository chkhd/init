# -*- sh -*-
# vi: set ft=sh :

## Install required packages
apt-get install -y xserver-xorg xserver-xorg-input-all xinit wmaker \
        x11-xserver-utils wmhdplop wmclock wmforecast

cd ~vagrant
cat <<EOF > .xinitrc
exec VBoxClient --clipboard&
exec VBoxClient --draganddrop&
exec VBoxClient --dsiplay&
exec VBoxClient --checkhostversion&
exec VBoxClient --seamless&
VBoxClient --clipboard&
VBoxClient --draganddrop&
VBoxClient --dsiplay&
VBoxClient --checkhostversion&
VBoxClient --seamless&

xset s off
xset -dpms
xset s noblank
exec wmaker
EOF

# TODO: Remap Meta, Super, Alt, Ctrl and CapsLock
